// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model WorkFlow {
  id          String      @id @default(cuid()) // Auto-incremented primary key
  name        String
  userId      String
  description String?
  definition  String
  status      String
  createdAt   DateTime @default(now()) // Automatically set the creation time
  updatedAt   DateTime @updatedAt // Automatically update the timestamp on update

  //user cannot have 2 workflows

  @@unique([name,userId])
}